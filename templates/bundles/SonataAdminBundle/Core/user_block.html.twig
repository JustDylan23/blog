<li class="user-header bg-light-blue">
    <p>{{ app.user.userIdentifier }}</p>
</li>
<li class="user-footer">
    {% if is_granted('ROLE_ADMIN') %}
        <div class="pull-left">
            <a href="{{ path('admin_app_user_edit', { id: app.user.id }) }}" class="btn btn-default btn-flat">
                <i class="fa fa-user"></i>
                Profile
            </a>
        </div>
    {% endif %}
    <div class="pull-right">
        <a href="{{ path('app_logout') }}" class="btn btn-default btn-flat">
            <i class="fa fa-sign-out fa-fw"></i>
            Logout
        </a>
    </div>
</li>
